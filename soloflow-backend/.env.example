# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/soloflow?schema=public

# JWT Configuration
# IMPORTANTE: Gere uma chave segura usando: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secure-random-secret-key-here
JWT_EXPIRATION=2h
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration (Cache)
# TTL em segundos (300 = 5 minutos)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# CORS (opcional)
CORS_ORIGIN=http://localhost:5173

# Upload Configuration (opcional)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
