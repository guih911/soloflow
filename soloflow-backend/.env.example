# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/soloflow?schema=public

# JWT Configuration
# IMPORTANTE: Gere uma chave segura usando: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secure-random-secret-key-here
JWT_EXPIRATION=2h
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration (Cache)
# TTL em segundos (300 = 5 minutos)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# CORS (opcional)
CORS_ORIGIN=http://localhost:5173

# Upload Configuration (opcional)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Cloudflare R2 Storage Configuration
# Obtenha essas credenciais em: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=soloflow-attachments
R2_PUBLIC_URL=https://your-bucket.r2.dev
